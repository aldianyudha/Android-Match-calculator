<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="12dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KALKULATOR MINI"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRIGONOMETRI"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textStyle="bold" />

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/input"
       android:hint="Input Angka"
       android:inputType="number"
       android:textAlignment="center" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sin"
            android:text="SIN"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cos"
            android:text="COS"
            android:layout_toRightOf="@id/btn_sin"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tan"
            android:text="TAN"
            android:layout_toRightOf="@id/btn_cos"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_csc"
            android:text="CSC"
            android:layout_below="@+id/btn_sin"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sec"
            android:text="SEC"
            android:layout_toRightOf="@id/btn_csc"
            android:layout_below="@id/btn_cos"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cot"
            android:text="COT"
            android:layout_toRightOf="@id/btn_sec"
            android:layout_below="@+id/btn_tan"
            />
        <Button
            android:layout_width="266.4dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_log"
            android:text="LOG 10"
            android:layout_below="@id/btn_csc"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hasil"
        android:text="0.0"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="25dp"/>
</LinearLayout>